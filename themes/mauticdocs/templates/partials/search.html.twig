{% if config.plugins.simplesearch.enabled %}
    <div class="searchbox">
        <label for="search-by"><i class="fa fa-search"></i></label>
        <input id="search-by" type="text" placeholder="{{ 'THEME_MAUTICDOCS_SEARCH_DOCUMENTATION'|t }}"
               data-search-input="{{ base_url_relative }}/search.json/query"/>
        <span data-search-clear><i class="fa fa-close"></i></span>
    </div>
{% endif %}
{% if config.plugins.tntsearch.enabled %}
    <div class="adv-search">
        <i class="fa fa-sliders" style="padding-right:5px"></i> <a href="{{ base_url_absolute }}/search">{{ 'THEME_MAUTICDOCS_ADVANCED_SEARCH'|t }}</a>
    </div>
{% endif %}